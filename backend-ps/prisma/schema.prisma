generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" //your db
  url      = "" // add your connection string here or in .env()
}

model details {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   email String @unique
   name String
   password String @unique
}